html
  head
    title Thinknetica
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags

  body
    .container
      = render 'layouts/navbar'
      .row
        .col-md-12
          = render 'shared/flash_massages'
          / .notice
          /   = notice
          / .alert
          /   = alert
          = yield

    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
