.votes id = "#{item.id}"
  .btn-group
    - unless current_user&.author_of?(item)
      = link_to '+', vote_up_question_path(@question),
        remote: true,
        data: { type: :json },
        method: :post,
        class: 'btn btn-success'

      = link_to 'vote reset', vote_reset_question_path(@question),
        remote: true,
        data: { type: :json },
        method: :delete,
        class: 'btn btn-default'

      = link_to '-', vote_down_question_path(@question),
        remote: true,
        data: { type: :json },
        method: :post,
        class: 'btn btn-danger'

  p.vote-count = item.rating
